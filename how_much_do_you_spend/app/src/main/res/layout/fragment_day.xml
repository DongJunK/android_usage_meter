<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/leftButton"
            android:src="@drawable/left"
            android:background="#5f86a5"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sunSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sunSelectText"
                android:background="@drawable/magnitude_circle"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/monSelectLayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/monSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tueSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/tueSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="3"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/wedSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="수"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/wedSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/thuSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="목"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/thuSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/friSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="금"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/friSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="6"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/satSelectLayout"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="토"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/satSelectText"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="30"
                android:textSize="19dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/rightButton"
            android:src="@drawable/right"
            android:background="#5f86a5"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nowDayText"
        android:layout_gravity="center_horizontal"
        android:text="0000년 00월 00일"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>